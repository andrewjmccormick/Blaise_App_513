<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blaise_App"
        x:Class="Blaise_App.IntPassword"
        mc:Ignorable="d"
        Title="IntPassword" Height="300" Width="600" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Margin="100,100,50,50" >
    <Grid>
        <StackPanel Margin="10">
            <Label>
                <Bold>
                    <Run Text="Enter your login password to view this case"/>
                </Bold>
            </Label>
            <TextBox x:Name="UserPassword" MaxLength="8" FontSize="24" FontWeight="Bold" Height="50"  />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="100" Height="30"  Margin ="20,20,20,20" Click="Button_Click" IsDefault="True" IsCancel="True"/>
                <Button Content="Cancel" Width="100" Height="30" Margin ="20,20,20,20" Click="Button_Cancel_Click" IsDefault="True" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
